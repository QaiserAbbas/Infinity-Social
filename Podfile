# Uncomment the next line to define a global platform for your project
# platform :ios, '9.0'

target 'InfinitySocial' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!

  # Pods for InfinitySocial

  # Pods for Firebase
  pod 'Firebase/Core'
  pod 'Firebase/Database'
  pod 'FirebaseInstanceID'
  pod 'Firebase/Auth'
  pod 'Firebase/Storage'
  pod 'Firebase/Messaging'

  # Pods for Image
  pod 'SDWebImage', '~> 4.0'

  # Pods for Keyboard Handling
  pod 'IQKeyboardManager'

  # Pods for Hud
  pod 'MBProgressHUD', '~> 1.0.0'

  pod 'DropDown'
  pod 'LGAlertView'

  # Pods for Google Utilities
  pod 'GoogleMaps'
  pod 'GooglePlacePicker'
  pod 'GooglePlaces'
  
  # Pods for Facebook
  pod 'FacebookLogin'

  target 'InfinitySocialTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'InfinitySocialUITests' do
    inherit! :search_paths
    # Pods for testing
  end

end
